# Code Standards Auditor Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git - it's already in .gitignore

# Neo4j Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password-here
NEO4J_DATABASE=code-standards
USE_NEO4J=true

# Google Gemini API (REQUIRED)
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# API Server
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO
DEBUG=true
ENVIRONMENT=development

# GitHub Token (for CLI operations)
# Get a token from: https://github.com/settings/tokens
# Required permissions: repo (read/write)
GH_TOKEN=your-github-token-here

# Deep Research Mode (Optional)
ENABLE_DEEP_RESEARCH=true
DEEP_RESEARCH_MAX_ITERATIONS=3
DEEP_RESEARCH_QUALITY_THRESHOLD=8.5
