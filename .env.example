# API Keys
GEMINI_API_KEY=your-gemini-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password-here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Security
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# LLM Configuration
GEMINI_MODEL=gemini-pro
MAX_CONTEXT_TOKENS=32000
TEMPERATURE=0.3
TOP_P=0.95
TOP_K=40

# Caching
CACHE_TTL_SECONDS=3600
PROMPT_CACHE_ENABLED=true
BATCH_PROCESSING_ENABLED=true
BATCH_SIZE=10

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Monitoring
SENTRY_DSN=
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEBUG=false
TESTING=false
ENVIRONMENT=development

# File Paths
STANDARDS_PATH=/Volumes/FS001/pythonscripts/standards
REPORTS_PATH=/Volumes/FS001/pythonscripts/code-standards-auditor/reports
TEMP_PATH=/tmp/code-auditor

# Feature Flags
ENABLE_ANTHROPIC_FALLBACK=true
ENABLE_NEO4J_CACHE=true
ENABLE_ASYNC_PROCESSING=true
ENABLE_WEBHOOK_NOTIFICATIONS=false

# Webhook Configuration (if enabled)
WEBHOOK_URL=
WEBHOOK_SECRET=

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=300
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
